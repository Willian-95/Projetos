

nome=('willian:')



nota1 = float(input('primeira nota:'))
nota2 = float(input('segunda nota:'))
nota3 = float(input('terceira nota:'))
nota4 = float(input('quarta nota:'))

x = (nota1 + nota2 + nota3 + nota4)/4

limite_inferior =6
limite_superior =7.9

print(f'{nome},sua nota final é {x} /10.')
if x>=8:print('voce foi aprovado:')
elif limite_inferior <= x<= limite_superior :print('recuperação')
else : print('voce não foi aprovado')