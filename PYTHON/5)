
n1 = float(input("digite sua primeira nota:"))
n2 = float(input("digite sua segunda nota:"))
n3  = float(input("digite sua terceira nota:"))


soma = (n1 + n2 + n3) / 3

if soma >= 8:
    print (" você foi aprovado.")
if soma <= 7.9:
    print ("você ficou de recuperação.")
if soma < 6: 
    print ("você foi reprovado ")